<div class="row row-overflow">
    <div class="col-lg-2 col-md-3 col-sm-4">
        <div class="bs-sidebar">
            <ul id="ul_view" class="nav nav-list bs-sidenav">
                <a id="bt_addView" class="btn btn-default" style="width : 100%;margin-bottom: 5px;"><i class="fas fa-plus-circle"></i> {{ 'Créer une vue' }}</a>
                <li class="filter" style="margin-bottom: 5px;"><input class="filter form-control input-sm" placeholder="{{ 'Rechercher...' }}" style="width: 100%"/></li>
                {% for view in viewEditViewsList %}
                    <li class="cursor li_view" data-view_id="{{ view.getId() }}">
                        <div class="label-view">
                            <i class="fas fa-arrows-alt-v pull-left cursor spacing-right"></i>{{ view.getDisplay('icon')|raw }}<i class="spacing-right"></i>{{ view.getName() }}
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="col-lg-10 col-md-9 col-sm-8" style="display: none;" id="div_view">
        <legend style="height: 35px;">
            <a class="btn btn-default btn-xs" id="bt_editView"><i class="fas fa-pencil-alt"></i> {{ 'common.setup' | trans }}</a>
            <a class="btn btn-danger btn-xs pull-right" id="bt_removeView"><i class="fas fa-minus-circle"></i> {{ 'common.remove' | trans }}</a>
            <a class="btn btn-success btn-xs pull-right" id="bt_saveView"><i class="far fa-check-circle"></i> {{ 'common.save' | trans }}</a>
            <a class="btn btn-primary btn-xs pull-right" id="bt_viewResult"><i class="fas fa fa-eye"></i> {{ 'Voir le résultat' }}</a>
            <a class="btn btn-default btn-xs pull-right" id="bt_addviewZone"><i class="fas fa-plus-circle"></i> {{ 'Ajouter une zone' }}</a>
        </legend>
        <div id="div_viewZones" style="margin-top: 10px;"></div>
    </div>

</div>

<div class="modal fade" id="md_addEditviewZone">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{ ' Ajouter/Editer viewZone ' }}</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" style="display: none;" id="div_addEditviewZoneError"></div>
                <input id="in_addEditviewZoneEmplacement" style="display : none;"/>
                <form class="form-horizontal" onsubmit="return false;">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">{{ 'common.name' | trans }}</label>
                        <div class="col-sm-10">
                            <input id="in_addEditviewZoneName" class="form-control" placeholder="{{ 'common.name' | trans }}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">{{ 'common.type' | trans }}</label>
                        <div class="col-sm-5">
                            <select class="form-control" id="sel_addEditviewZoneType">
                                <option value="widget">{{ 'common.widget' | trans }}</option>
                                <option value="graph">{{ ' Graphique ' }}</option>
                                <option value="table">{{ ' Tableau ' }}</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger" data-dismiss="modal">{{ 'common.cancel' | trans }}</a>
                <a class="btn btn-success" id="bt_addEditviewZoneSave"><i class="fas fa-save"></i> {{ 'common.save' | trans }}</a>
            </div>
        </div>
    </div>
</div>
