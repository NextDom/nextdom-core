                </div>
                <div class="box-body">
                    <div class="progress progress-sm spacing-bottom-big active">
                        <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="{{ hddLoad }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ hddLoad }}%">
                            <span class="sr-only">{{ hddLoad }}%</span>
                        </div>
                    </div>
                    <span>{{ hddLoad }}% {{ 'administration.of-space-used'|trans }}</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-6">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fas fa-database"></i>{{ 'administration.swap'|trans }}</h3>
                    <span class="pull-right">({{ administrationSwapTotal }})</span>
                </div>
                <div class="box-body">
                    <div class="progress progress-sm spacing-bottom-big active">
                        <div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar" aria-valuenow="{{ swapLoad }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ swapLoad }}%">
                            <span class="sr-only">{{ swapLoad }}{{ '%' }}</span>
                        </div>
                    </div>
                    <span>{{ swapLoad }}% {{ 'administration.of-memory-used'|trans }}</span>
                </div>
            </div>
        </div>
    </div>
