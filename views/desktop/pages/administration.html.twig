<section class="content">
    <div class="row">
        <div class="col-md-3 col-xs-6">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fas fa-microchip"></i>{{ 'administration.cpu'|trans }}</h3>
                    <span class="pull-right">({{ cpuCoresCount }} {{ 'administration.cpu-cores'|trans }})</span>
                </div>
                <div class="box-body">
                    <div class="progress progress-sm spacing-bottom-big active">
                        <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="{{ cpuLoad }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ cpuLoad }}%">
                            <span class="sr-only">{{ cpuLoad }}%</span>
                        </div>
                    </div>
                    <span>{{ cpuLoad }}% {{ 'administration.of-cpu-load'|trans }}</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-6">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title"><i class="fas fa-memory"></i>{{ 'administration.memory'|trans }}</h3>
                    <span class="pull-right">({{ totalMemory }})</span>
                </div>
                <div class="box-body">
                    <div class="progress progress-sm spacing-bottom-big active">
                        <div class="progress-bar progress-bar-warning progress-bar-striped" role="progressbar" aria-valuenow="{{ memoryLoad }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ memoryLoad }}%">
                            <span class="sr-only">{{ memoryLoad }}%</span>
                        </div>
                    </div>
                    <span>{{ memoryLoad }}% {{ 'administration.of-memory-used'|trans }}</span>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-xs-6">
