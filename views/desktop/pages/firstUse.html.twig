{% include '/commons/header.html.twig' %}

<!-- Header -->
<body class="hold-transition">
    <div class="firstUse-Page">
        <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <div class="box">
                <div class="box-body">
                    <div id="logo" class="stepwizard">
                        <img src="public/img/NextDom/NextDom_Setup.png">
                    </div>
                </div>
                <div class="stepwizard stepwizard-progress">
                    <div class="stepwizard-row setup-panel">
                        <div class="stepwizard-step">
                            <a href="#step-1" type="button" class="btn btn-primary primary-bg stepwizard-btn-circle"></a>
                            <p>{{ 'firstuse.step'|trans ~ ' 1' }}</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-2" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                            <p>{{ 'firstuse.step'|trans ~ ' 2' }}</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-3" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                            <p>{{ 'firstuse.step'|trans ~ ' 3' }}</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-4" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                            <p>{{ 'firstuse.step'|trans ~ ' 4' }}</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-5" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                            <p>{{ 'firstuse.step'|trans ~ ' 5' }}</p>
                        </div>
                        <div class="stepwizard-step">
                            <a href="#step-6" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                            <p>{{ 'firstuse.step'|trans ~ ' 6' }}</p>
                        </div>
                    </div>
                </div>
                <div class="stepwizard-box">
                    <div class="box-body">

                        <!-- Step 1 section : Welcome -->
                        <div class="row setup-content" id="step-1">
                            <div class="stepwizard">
                                <h2 class="login-box-msg">{{ 'firstuse.welcome-title'|trans }}</h2>
                                <h5>{{ 'firstuse.welcome-content'|trans|nl2br }}</h5>
                            </div>
                            <button id="toStep2" class="btn btn-primary nextBtn primary-bg pull-right" type="button">{{ 'common.next'|trans }}<i class="fas fa-caret-right spacing-left no-spacing"></i></button>
                        </div>

                        <!-- Step 2 section : Change password -->
                        <div class="row setup-content" id="step-2">
                            <div class="stepwizard">
                                <h2 class="login-box-msg">{{ 'firstuse.password-title'|trans }}</h2>
                                <h5>{{ 'firstuse.password-content'|trans }}</h5>
                                <div id="register" tabindex="500">
                                    <div class="passwd stepwizard-passwd">
                                        <input type="password" id="in_change_password" placeholder="{{ 'firstuse.password-placeholder'|trans }}">
                                    </div>
                                    <div class="passwd stepwizard-passwd">
                                        <input type="password" id="in_change_password_confirm" placeholder="{{ 'firstuse.password-confirm-placeholder'|trans }}">
                                    </div>
                                    <div class="stepwizard-passwd">
                                        <div class="progress progress-slim">
                                            <div id="newPasswordProgress" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                                        </div>
                                        <span id="newPasswordLevel" class="label label-value" data-toggle="tooltip" title="" data-original-title="{{'security.rules'|trans}}"></span>
                                    </div>
                                </div>
                            </div>
                            <button id="toStep3" class="btn btn-primary nextBtn pull-right primary-bg" type="button">{{ 'common.next'|trans }}<i class="fas fa-caret-right spacing-left no-spacing"></i></button>
                            <button id="backStep1" class="btn btn-primary returnBtn pull-left primary-bg" type="button"><i class="fas fa-caret-left"></i>{{ 'common.previous'|trans }}</button>
                        </div>

                        <!-- Step 3 section : Market connection -->
                        <div class="row setup-content" id="step-3">
                            <div class="stepwizard">
                                <h2 class="login-box-msg">{{ 'firstuse.market-title'|trans }}</h2>
                                <div class="row">
                                    <h5>{{ 'firstuse.market-content'|trans }}</h5>
                                    <div id="market" class="col-sm-12 col-md-6">
                                        <h5>{{ 'firstuse.market-noaccount'|trans }}</h5>
                                        <button class="dark btn" id="bt_compte_market"><i class="fas fa-sign-in-alt spacing-right"></i>{{ 'firstuse.market-wantaccount'|trans }}</button>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <h5>{{ 'firstuse.market-alreadyaccount'|trans }}</h5>
                                        <div class="mail stepwizard-passwd stepwizard-passwd2">
                                            <input type="text" id="in_login_username_market" class="stepwizard-input" placeholder="{{ 'firstuse.market-username-placeholder'|trans }}">
                                        </div>
                                        <div class="passwd stepwizard-passwd stepwizard-passwd2">
                                            <input type="password" id="in_login_password_market" class="stepwizard-input" placeholder="{{ 'firstuse.market-password-placeholder'|trans }}">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button id="skipStep4" class="btn btn-primary nextBtn primary-bg" type="button"><i class="fas fa-ban spacing-right"></i>{{ 'common.ignore'|trans }}</button>
                            <button id="toStep4" class="btn btn-primary nextBtn primary-bg pull-right" type="button">{{ 'common.next'|trans }}<i class="fas fa-caret-right spacing-left no-spacing"></i></button>
                            <button id="backStep2" class="btn btn-primary returnBtn primary-bg pull-left" type="button"><i class="fas fa-caret-left"></i>{{ 'common.previous'|trans }}</button>
                        </div>

                        <!-- Step 4 section : Theme choose -->
                        <div class="row setup-content" id="step-4">
                            <div class="stepwizard">
                                <h2 class="login-box-msg">{{ 'firstuse.customize-title'|trans }}</h2>
                                <div class="row">
                                    <h5>{{ 'firstuse.customize-content'|trans }}</h5>
                                    <div class="col-sm-12 col-md-6 col-lg-4 form-group">
                                        <div>
                                            <label class="clearfix cursor themeThumbnail cursor" for="light-nextdom">
                                                <div>
                                                    <span class="themeThumbnailHeader bg-nextdom"><i class="fas fa-bars"></i></span>
                                                </div>
                                                <div>
                                                    <span class="themeThumbnailLeft" style="background: #f9fafc"></span>
                                                    <span class="themeThumbnailBody" style="background: #ecf0f5"></span>
                                                </div>
                                            </label>
                                            <input id="light-nextdom" class="theme spacing-right" type="radio" name="themeNextDom" value="light-nextdom"/>
                                            <label for="light-nextdom">{{ 'Light' }}</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4 form-group">
                                        <div>
                                            <label class="clearfix cursor themeThumbnail cursor" for="dark-nextdom">
                                                <div>
                                                    <span class="themeThumbnailHeader bg-nextdom"><i class="fas fa-bars"></i></span>
                                                </div>
                                                <div>
                                                    <span class="themeThumbnailLeft" style="background: #222d32"></span>
                                                    <span class="themeThumbnailBody" style="background: #2c3b41;"></span>
                                                </div>
                                            </label>
                                            <input id="dark-nextdom" class="theme spacing-right" type="radio" name="themeNextDom" value="dark-nextdom"/>
                                            <label for="dark-nextdom">{{ 'Dark' }}</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4 form-group">
                                        <div>
                                            <label class="clearfix cursor themeThumbnail cursor" for="mix-nextdom">
                                                <div>
                                                    <span class="themeThumbnailHeader bg-nextdom"><i class="fas fa-bars"></i></span>
                                                </div>
                                                <div>
                                                    <span class="themeThumbnailLeft" style="background: #222d32"></span>
                                                    <span class="themeThumbnailBody" style="background: #ecf0f5;"></span>
                                                </div>
                                            </label>
                                            <input id="mix-nextdom" class="theme spacing-right" type="radio" name="themeNextDom" value="mix-nextdom"/>
                                            <label for="mix-nextdom">{{ 'Mix' }}</label>
                                        </div>
                                    </div>
                                    <input id="nextdom-theme" class="configKey form-control" data-l1key="nextdom::user-theme" style="display:none" />
                                </div>
                            </div>
                            <button id="toStep5" class="btn btn-primary nextBtn primary-bg pull-right" type="button">{{ 'common.next'|trans }}<i class="fas fa-caret-right spacing-left no-spacing"></i></button>
                            <button id="backStep3" class="btn btn-primary returnBtn primary-bg pull-left" type="button"><i class="fas fa-caret-left"></i>{{ 'common.previous'|trans }}</button>
                        </div>

                        <!-- Step 5 section : Widget Theme choose -->
                        <div class="row setup-content" id="step-5">
                            <div class="stepwizard">
                                <h2 class="login-box-msg">{{ 'firstuse.customize-title2'|trans }}</h2>
                                <div class="row">
                                    <h5>{{ 'firstuse.customize-widget'|trans }}</h5>
                                    {% for theme in profilsWidgetThemes %}
                                        <div class="col-sm-12 col-md-6 col-lg-4 form-group">
                                            <div class="clearfix">
                                                <label class="cursor" for={{ theme.code }}>
                                                    <img class="themeWidgetThumbnail" src="{{ theme.icon }}">
                                                </label>
                                            </div>
                                            <input id={{ theme.code }} class="spacing-right" type="radio" name="themeWidget" value="{{ theme.code }}"/>
                                            <label for={{ theme.code }}>{{ theme.code|capitalize }}</label>
                                        </div>
                                    {% endfor %}
                                    <input id="widget-theme" class="userAttr form-control" data-l1key="options" data-l2key="widget::theme" style="display:none" />
                                </div>
                            </div>
                            <button id="toStep6" class="btn btn-primary nextBtn primary-bg pull-right" type="button">
                                {{ 'common.next'|trans }}<i class="fas fa-caret-right spacing-left no-spacing"></i>
                            </button>
                            <button id="backStep4" class="btn btn-primary returnBtn primary-bg pull-left" type="button"><i class="fas fa-caret-left"></i>
                                {{ 'common.previous'|trans }}
                            </button>
                        </div>

                        <!-- Step 6 section : Finish -->
                        <div class="row setup-content" id="step-6">
                            <div class="stepwizard">
                                <h2 class="login-box-msg">{{ 'firstuse.congrats-title'|trans }}</h2>
                                <h5>{{ 'firstuse.congrats-content'|trans }}</h5>
                            </div>
                            <button id="finishConf" class="btn btn-primary nextBtn primary-bg pull-right ui-icon-closethick" type="button">{{ 'common.finish'|trans }}<i class="fas fa-check-circle spacing-left no-spacing"></i></button>
                            <button id="backStep5" class="btn btn-primary returnBtn primary-bg pull-left" type="button"><i class="fas fa-caret-left"></i>{{ 'common.previous'|trans }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if JS_END_POOL is defined %}
        {% for jsFile in JS_END_POOL %}
            <script src="{{ jsFile }}"></script>
        {% endfor %}
    {% endif %}
</body>
