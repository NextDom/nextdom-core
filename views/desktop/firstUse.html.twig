{% include '/commons/header.html.twig' %}

<!-- Header -->
<div class="row text-center">
    <div id="logo" class="col-md-12 col-sm-12 col-xs-12">
        <img src="public/img/NextDom/NextDom_Wide_AlphaBlackBlue.png">
    </div>
</div>

<!-- Header bar -->
<div class="row text-center">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary primary-bg stepwizard-btn-circle"></a>
                    <p>{{ 'firstuse.step'|trans ~ ' 1' }}</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                    <p>{{ 'firstuse.step'|trans ~ ' 2' }}</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-3" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                    <p>{{ 'firstuse.step'|trans ~ ' 3' }}</p>
                </div>
                <div class="stepwizard-step">
                    <a href="#step-4" type="button" class="btn btn-default stepwizard-btn-circle" disabled="disabled"></a>
                    <p>{{ 'firstuse.step'|trans ~ ' 4' }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Content -->
<div class="row text-center">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <div class="box stepwizard-box">
            <div class="box-body">

                <!-- Step 1 section -->
                <div class="row setup-content" id="step-1">
                    <div class="stepwizard">
                        <h2 class="login-box-msg">{{ 'firstuse.welcome-title'|trans({'%productName%' : PRODUCT_NAME}) }}</h2>
                        <h5>{{ 'firstuse.welcome-content'|trans|nl2br }}</h5>  
                    </div>
                    <button id="toStep2" class="btn btn-primary nextBtn primary-bg pull-right" type="button">{{ 'common.next'|trans }}&nbsp;&nbsp;<i class="fa fa-caret-right"></i></button>
                </div>

                <!-- Step 2 section -->
                <div class="row setup-content" id="step-2">
                    <div class="stepwizard">
                        <h2 class="login-box-msg">{{ 'firstuse.password-title'|trans({'%productName%' : PRODUCT_NAME}) }}</h2>
                        <h5>{{ 'firstuse.password-content'|trans }}</h5>
                        <div id="register" tabindex="500">
                            <div class="passwd stepwizard-passwd">
                                <input type="password" id="in_change_password" placeholder="{{ 'firstuse.password-placeholder'|trans }}">
                            </div>
                            <div class="passwd stepwizard-passwd">
                                <input type="password" id="in_change_passwordToo" placeholder="{{ 'firstuse.password-confirm-placeholder'|trans }}">
                            </div>
                        </div>
                    </div>
                    <button id="toStep3" class="btn btn-primary nextBtn pull-right primary-bg" type="button">{{ 'common.next'|trans }}&nbsp;&nbsp;<i class="fa fa-caret-right"></i></button>
                    <button id="backStep1" class="btn btn-primary returnBtn pull-left primary-bg" type="button"><i class="fa fa-caret-left">&nbsp;&nbsp;</i>{{ 'common.previous'|trans }}</button>
                </div>

                <!-- Step 3 section -->
                <div class="row setup-content" id="step-3">
                    <div class="stepwizard">
                        <h2 class="login-box-msg">{{ 'firstuse.market-title'|trans({'%productName%' : PRODUCT_NAME}) }}</h2>
                        <h5>{{ 'firstuse.market-content'|trans }}</h5>
                        <div class="row">
                            <div id="market" class="col-sm-12 col-md-6">
                                <h5>{{ 'firstuse.market-noaccount'|trans }}</h5>
                                <button class="dark btn" id="bt_compte_market"><i class="fa fa-sign-in">&nbsp;&nbsp;</i>{{ 'firstuse.market-wantaccount'|trans }}</button>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <h5>{{ 'firstuse.market-alreadyaccount'|trans }}</h5>
                                <div class="mail stepwizard-passwd stepwizard-passwd2">
                                    <input type="text" id="in_login_username_market" class="stepwizard-input" placeholder="{{ 'firstuse.market-username-placeholder'|trans }}">
                                </div>
                                <div class="passwd stepwizard-passwd stepwizard-passwd2">
                                    <input type="password" id="in_login_password_market" class="stepwizard-input" placeholder="{{ 'firstuse.market-password-placeholder'|trans }}">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button id="skipStep4" class="btn btn-primary nextBtn primary-bg" type="button"><i class="fa fa-ban">&nbsp;&nbsp;</i>{{ 'common.ignore'|trans }}</button>
                    <button id="toStep4" class="btn btn-primary nextBtn primary-bg pull-right" type="button">{{ 'common.next'|trans }}&nbsp;&nbsp;<i class="fa fa-caret-right"></i></button>
                    <button id="backStep2" class="btn btn-primary returnBtn primary-bg pull-left" type="button"><i class="fa fa-caret-left">&nbsp;&nbsp;</i>{{ 'common.previous'|trans }}</button>
                </div>

                <!-- Step 4 section -->
                <div class="row setup-content" id="step-4">
                    <div class="stepwizard">
                        <h2 class="login-box-msg">{{ 'firstuse.congrats-title'|trans({'%productName%' : PRODUCT_NAME}) }}</h2>
                        <h5>{{ 'firstuse.congrats-content'|trans }}</h5>

                        </div>
                        <button id="finishConf" class="btn btn-primary nextBtn primary-bg pull-right ui-icon-closethick" type="button">{{ 'common.finish'|trans }}&nbsp;&nbsp;<i class="fa fa-check-circle"></i></button>
                        <button id="backStep3" class="btn btn-primary returnBtn primary-bg pull-left" type="button"><i class="fa fa-caret-left">&nbsp;&nbsp;</i>{{ 'common.previous'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>

        {% if JS_END_POOL is defined %}
            {% for jsFile in JS_END_POOL %}
                <script src="{{ jsFile }}"></script>
            {% endfor %}
        {% endif %}
    </div>
</div>
