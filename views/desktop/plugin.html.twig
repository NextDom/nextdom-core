<div id="div_resumePluginList">
    <div class="blurPanel">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fas fa-puzzle-piece">&nbsp;&nbsp;</i>{{ 'Mes plugins' }}</h3>
            </div>
            <div class="box-body">
                <div class="input-group">
                    <div class="input-group-addon"><i class="fas fa-search"></i></div>
                    <input class="form-control" placeholder="{{ 'Rechercher...' }}" id="in_searchPlugin"/>
                </div>
            </div>
        </div>
        <div class="pluginListContainer row">
            {% for plugin in pluginsList %}
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <div class="box pluginDisplayCard" data-pluginPath="{{ plugin.getFilepath() }}" data-plugin_icon="{{ plugin.getPathImgIcon() }}" data-plugin_id="{{ plugin.getId() }}" {% if not plugin.isActive() %}style="{{ pluginInactiveOpacity }}"{% endif %}>
                        <div class="box-header cursor with-border">
                            <h4 class="box-title"><img style="height:50px;padding-right:5px" src="{{ plugin.getPathImgIcon() }}"> {{ plugin.getName() }}</h4>
                        </div>
                        <div class="box-body">
                            <p><b>{{ 'Catégorie :' }}</b> {{ plugin.getCategory() }}</p>
                            <p style="white-space: nowrap;white-space: pre-line;height: 75px;overflow: hidden;text-overflow: ellipsis;"><b>{{ 'Description :' }}</b> {{ plugin.getDescription() }}</p>
                            <p><b>{{ 'Autheur :' }}</b> {{ plugin.getAuthor() }}</p>
                            <p><i>{{ 'Licence :' }}</i> {{ plugin.getLicense() }}</p>
                        </div>
                        <div class="box-footer clearfix text-center">
                            <a class="btn btn-info btn-sm pull-left" title="{{'Configurer'}}"><i class="fas fa-cog">&nbsp;&nbsp;</i>{{'Configurer'}}</a>
                            <a class="btn btn-danger btn-sm remove pull-right" id="span_plugin_delete" title="{{'Supprimer'}}"><i class="far fa-trash-alt">&nbsp;&nbsp;</i>{{'Supprimer'}}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="fab">
        <span class="fab-action-button"><i class="fab-action-button__icon fas fa-bars"></i></span>
        <ul class="fab-buttons">
            {% for repoCode, repoData in pluginReposList %}
                {% if repoData['name'] == 'Market' %}
                    <li class="fab-buttons__item"><a class="fab-buttons__link displayStore" style="background-color:#96c927" data-repo="{{ repoCode }}" data-tooltip="{{ repoData['name'] }} Jeedom"><i class="fa fa-shopping-cart"></i></a></li>
                {% else %}
                    <li class="fab-buttons__item"><a class="fab-buttons__link displayStore" style="background-color:#33b8cc" data-repo="{{ repoCode }}" data-tooltip="{{ repoData['name'] }}"><i class="fa fa-shopping-cart"></i></a></li>
                {% endif %}
            {% endfor %}
            <li class="fab-buttons__item"><a class="fab-buttons__link bg-light-blue-active" id="bt_addPluginFromOtherSource" data-tooltip="{{ 'Sources' }}"><i class="fas fa-plus"></i></a></li>
        </ul>
    </div>
    <div class="fab fab-bis">
        <a class="fab-action-button bg-red-active" href="{{ HOMELINK }}"><i class="fab-action-button__icon fas fa-home"></i></a>
    </div>
</div>

<div id="div_confPlugin" style="display: none;">
    <div class="blurPanel">
        <div class="box box-header">
            <div class="box-title">
                <img style="height:50px;padding-right:5px" src="" id="span_plugin_icon">
                <span id="span_plugin_name"></span> (<span id="span_plugin_id"></span>) - <span id="span_plugin_install_version"></span>
            </div>
            <span id="span_plugin_market" class="pull-right"></span>
            <span id="span_plugin_doc" class="pull-right"></span>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="box">
                    <div class="box-header with-border"><h3 class="box-title"><i class="fas fa-circle-o-notch">&nbsp;&nbsp;</i>{{ 'Etat' }}</h3></div>
                    <div class="box-body">
                        <div id="div_plugin_toggleState"></div>
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">{{ 'Version' }}</label>
                                    <div class="col-sm-4">
                                        <span id="span_plugin_install_date" style="position:relative;top:9px;"></span>
                                    </div>
                                    <label class="col-sm-2 control-label">{{ 'Version NextDom' }}</label>
                                    <div class="col-sm-4">
                                        <span id="span_plugin_require" style="position:relative;top:9px;"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">{{ 'Auteur' }}</label>
                                    <div class="col-sm-4">
                                        <span id="span_plugin_author" style="position:relative;top:9px;"></span>
                                    </div>
                                    <label class="col-sm-2 control-label">{{ 'License' }}</label>
                                    <div class="col-sm-4">
                                        <span id="span_plugin_license" style="position:relative;top:9px;"></span>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="box box-primary" id="div_configLog">
                    <div class="box-header with-border">
                        <h3 class="box-title"><i class="fas fa-file">&nbsp;&nbsp;</i>{{ 'Log' }}</h3>
                        <a class="btn btn-success btn-sm pull-right" id="bt_savePluginLogConfig"><i class="fa fa-check-circle icon-white ">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
                    </div>
                    <div class="box-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <div id="div_plugin_log"></div>
                            </fieldset>
                        </form>
                        <div class="form-actions">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <div class="box box-danger">
                    <div class="box-header with-border"><h3 class="box-title"><i class="fas fa-certificate">&nbsp;&nbsp;</i>{{ 'Dépendances' }}</h3></div>
                    <div class="box-body">
                        <div id="div_plugin_dependancy"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="box box-warning">
                    <div class="box-header with-border"><h3 class="box-title"><i class="fas fa-university">&nbsp;&nbsp;</i>{{ 'Démon' }}</h3></div>
                    <div class="box-body">
                        <div id="div_plugin_deamon"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header with-border"><h3 class="box-title"><i class="fa fa-map">&nbsp;&nbsp;</i>{{ 'Installation' }}</h3></div>
            <div class="box-body">
                <span id="span_plugin_installation"></span>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fas fa-cogs"></i> {{ 'Configuration' }}</h3>
                <a class="btn btn-success btn-sm pull-right box-tools" id="bt_savePluginConfig"><i class="fas fa-save">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
            </div>
            <div class="box-body">
                <div id="div_plugin_configuration"></div>
                <div class="form-actions">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <div class="box box-primary" id="div_functionalityPanel">
                    <div class="box-header with-border">
                        <h3 class="box-title"><i class="fas fa-picture-o">&nbsp;&nbsp;</i>{{ 'Fonctionnalités' }}</h3>
                        <a class="btn btn-success btn-sm pull-right box-tools" id="bt_savePluginFunctionalityConfig"><i class="fas fa-save">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
                    </div>
                    <div class="box-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <div id="div_plugin_functionality"></div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="box box-primary" id="div_configPanel">
                    <div class="box-header with-border">
                        <h3 class="box-title"><i class="fas fa-columns">&nbsp;&nbsp;</i>{{ 'Panel' }}</h3>
                        <a class="btn btn-success btn-sm pull-right box-tools" id="bt_savePluginPanelConfig"><i class="fas fa-save">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
                    </div>
                    <div class="box-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <div id="div_plugin_panel"></div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="fab">
        <a class="fab-action-button bg-orange-active" id="bt_returnToThumbnailDisplay"><i class="fab-action-button__icon fas fa-chevron-left"></i></a>
    </div>
</div>

<div class="fab fab-left">
    <a class="fab-action-button cursor" style="display: none;" id="bt_goOnTop"><i class="fab-action-button__icon fas fa-angle-double-up"></i></a>
</div>

<script>
    $('.pluginListContainer').packery();
</script>
