<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left"></i>{{ 'common.return' | trans }}</a>
            <a class="btn btn-default btn-action-bar" href="index.php?v=d&p=summary"><i class="fas fa-cog"></i>{{ 'common.settings' | trans }}</a>
            <a class="btn btn-default btn-action-bar" id="bt_removeHistory"><i class="fas fa-history" aria-hidden="true"></i>{{ 'Historique des suppressions' }}</a>
            <a class="btn btn-success btn-action-bar bt_setIsVisible" data-value="1" style="display:none;"><i class="fas fa-eye"></i>{{ 'common.visible' | trans }}</a>
            <a class="btn btn-warning btn-action-bar bt_setIsVisible" data-value="0" style="display:none;"><i class="fas fa-eye-slash"></i>{{ 'Invisible' }}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-action btn-action-bar pull-right" id="bt_displayCollapse"><i class="fas fa-plus-square"></i>{{ 'Déplier' }}</a>
            <a class="btn btn-action btn-action-bar pull-right" style="display:none;" id="bt_displayUncollapse"><i class="fas fa-minus-square"></i>{{ 'Replier' }}</a>
            <a class="btn btn-danger btn-action-bar pull-right" id="bt_removeEqlogic" style="display:none;"><i class="fas fa-trash"></i>{{ 'common.remove' | trans }}</a>
            <a class="btn btn-success btn-action-bar pull-right bt_setIsEnable" data-value="1" style="display:none;"><i class="fas fa-check"></i>{{ 'common.active' | trans }}</a>
            <a class="btn btn-warning btn-action-bar pull-right bt_setIsEnable" data-value="0" style="display:none;"><i class="fas fa-times"></i>{{ 'Inactif' }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-th"></i>{{ 'Résumé domotique' | trans }}</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="pull-left">
                    <input type="checkbox" class="configKey" id="cb_actifDisplay" data-l1key="cb_actifDisplay" checked>
                    <label for="cb_actifDisplay" class="control-label label-check" data-toggle="tooltip" title="" data-original-title="{{'Afficher les équipements inactifs' | trans }}">{{'Inactif' | trans }}</label>
                </div>
                <div class="pull-left spacing-left">
                    <input type="checkbox" class="configKey" id="cb_visibleDisplay" data-l1key="cb_visibleDisplay" checked>
                    <label for="cb_visibleDisplay" class="control-label label-check" data-toggle="tooltip" title="" data-original-title="{{'Afficher les équipements invisible' | trans }}">{{'Invisible' | trans }}</label>
                </div>
                <div class="pull-right">
                    <span class="label label-success label-sticker">{{ 'Nombre d\'objets :' | trans }} {{ displayObjects|length }}</span>
                    <span class="label label-info label-sticker">{{ 'Nombre d\'équipements :' | trans }} {{ displayNbEqLogics }}</span>
                    <span class="label label-warning label-sticker">{{ 'Nombre de commandes :' | trans }} {{ displayNbCmds }}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="accordionDisplay">
        <div class="col-xs-4 object" data-id="-1">
            <div class="box box-primary" >
                <div class="box-header with-border accordion-toggle cursor" data-toggle="collapse" data-parent="#accordionDisplay" href="#display_none">
                    <h3 class="box-title"><i class="icon divers-caduceus3"></i>{{ 'common.none' | trans }}</h3>
                </div>
                <div id="display_none" class="panel-collapse collapse">
                    <div class="box-body">
                        <ul class="eqLogicSortable">
                            {% for eqLogic in displayEqLogics[-1] %}
                                <li class="alert eqLogic cursor showCmd" data-id="{{ eqLogic.getId() }}" data-visible="{{ eqLogic.getIsVisible() }}" data-enable="{{ eqLogic.getIsEnable() }}" data-name="{{ eqLogic.getName() }}" data-type="{{ eqLogic.getEqType_name() }}">
                                    <input type="checkbox" class="cb_selEqLogic"/>
                                    {{ eqLogic.getName() }}
                                    <i style="font-size:0.9em;">({{ eqLogic.getEqType_name() }})</i>
                                    {% if eqLogic.getIsEnable() != 1 %}
                                        <i class="fas fa-times" data-toggle="tooltip" title="" data-original-title="{{ 'Non actif' | trans }}"></i>
                                    {% endif %}
                                    {% if eqLogic.getIsVisible() != 1 %}
                                        <i class="fas fa-eye-slash" data-toggle="tooltip" title="" data-original-title="{{ 'Non visible' | trans }}"></i>
                                    {% endif %}
                                    <i class="fas fa-chevron-right pull-right showCmd summary-box-tools" data-toggle="tooltip" title="" data-original-title="{{ 'Voir les commandes' }}"></i>
                                    <i class="fas fa-cog pull-right configureEqLogic summary-box-tools spacing-right" data-toggle="tooltip" title="" data-original-title="{{ 'common.advanced_configuration' | trans }}"></i>
                                    <a class="fas fa-external-link-square-alt pull-right summary-box-tools spacing-right" href="{{ eqLogic.getLinkToConfiguration() }}" target="_blank" class="pull-right" data-toggle="tooltip" title="" data-original-title="{{ 'Aller sur la configuration de l\'équipement' }}"></a>
                                    <ul class="cmdSortable" style="display:none;">
                                        {% for cmd in displayCmds[eqLogic.getId()] %}
                                            <li class="alert alert-warning cmd cursor" data-id="{{ cmd.getId() }}" data-name="{{ cmd.getName() }}">{{ cmd.getName() }}
                                                <i class="fas fa-cog pull-right configureCmd" data-toggle="tooltip" title="" data-original-title="{{ 'common.advanced_configuration' | trans }}" style="line-height:20px"></i>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% for object in displayObjects %}
            {% if displayEqLogics[object.getId()]|length>0 %}
                <div class="col-xs-4 object">
                    <div class="box box-summary object" data-id="{{ object.getId() }}" style="border-top-color: {{ object.getDisplay('tagColor') }};">
                        <div class="box-header with-border accordion-toggle cursor" data-toggle="collapse" data-parent="#accordionDisplay" href="#display_{{ object.getId() }}">
                            <h3 class="box-title">{{ object.getDisplay('icon', '<i class="fas fa-tag"></i>')|replace({'></i>': '></i>'})|raw }}{{ object.getName() }}</h3>
                            <div class="box-tools pull-right" style="line-height:36px">
                                <a class="fas fa-external-link-square-alt openObject summary-box-tools spacing-right" data-id="index.php?v=d&p=object&id={{ object.getId() }}" data-toggle="tooltip" title="" data-original-title="{{ 'Aller sur la configuration de l\'objet' }}"></a>
                                <i class="fas fa-cog cursor configureObject summary-box-tools" data-toggle="tooltip" title="" data-original-title="{{ 'common.advanced_configuration' | trans }}"></i>
                            </div>
                        </div>
                        <div id="display_{{ object.getId() }}" class="panel-collapse collapse">
                            <div class="box-body">
                                <ul class="eqLogicSortable">
                                    {% for eqLogic in displayEqLogics[object.getId()] %}
                                        <li class="alert eqLogic cursor showCmd" data-id="{{ eqLogic.getId() }}" data-visible="{{ eqLogic.getIsVisible() }}" data-enable="{{ eqLogic.getIsEnable() }}" data-name="{{ eqLogic.getName() }}" data-type="{{ eqLogic.getEqType_name() }}">
                                            <input type="checkbox" class="cb_selEqLogic"/>
                                            {{ eqLogic.getName() }}
                                            <i style="font-size:0.9em;">({{ eqLogic.getEqType_name() }})</i>
                                            {% if eqLogic.getIsEnable() != 1 %}
                                                <i class="spacing-left fas fa-times" data-toggle="tooltip" title="" data-original-title="{{ 'Non actif' }}"></i>
                                            {% endif %}
                                            {% if eqLogic.getIsVisible() != 1 %}
                                                <i class="spacing-left fas fa-eye-slash" data-toggle="tooltip" title="" data-original-title="{{ 'Non visible' }}"></i>
                                            {% endif %}
                                            <i class="fas fa-chevron-right pull-right showCmd summary-box-tools" data-toggle="tooltip" title="" data-original-title="{{ 'Voir les commandes' }}"></i>
                                            <i class="fas fa-cog pull-right configureEqLogic summary-box-tools spacing-right" data-toggle="tooltip" title="" data-original-title="{{ 'common.advanced_configuration' | trans }}"></i>
                                            <a class="fas fa-external-link-square-alt pull-right summary-box-tools spacing-right" href="{{ eqLogic.getLinkToConfiguration() }}" target="_blank" class="pull-right" data-toggle="tooltip" title="" data-original-title="{{ 'Aller sur la configuration de l\'équipement' }}"></a>
                                            <ul class="cmdSortable" style="display:none;">
                                                {% for cmd in displayCmds[eqLogic.getId()] %}
                                                    <li class="alert alert-warning cmd cursor" data-id="{{ cmd.getId() }}" data-name="{{ cmd.getName() }}">{{ cmd.getName() }}
                                                        <i class="fas fa-cog pull-right configureCmd" data-toggle="tooltip" title="" data-original-title="{{ 'common.advanced_configuration' | trans }}" style="line-height:20px"></i>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</section>
