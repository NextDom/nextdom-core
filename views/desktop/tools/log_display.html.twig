<div class="box blurPanel" id="log_display">
    <!-- Header bar -->
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fas fa-tachometer-alt">&nbsp;&nbsp;</i>{{ 'Temps réel' }}</h3>
    </div>

    <!-- Page content -->
    <div class="box-body">
        <form class="form-horizontal">
            <fieldset>
                <div class="box-tools pull-right padding-bottom">
                    <a class="btn btn-warning" data-state="1" id="bt_eventLogStopStart"><i class="fas fa-pause">&nbsp;&nbsp;</i>{{'Pause'}}</a>
                    <a class="btn btn-success" id="bt_logdisplaydownloadLog"><i class="fas fa-cloud-download-alt">&nbsp;&nbsp;</i>{{'Télécharger'}}</a>
                    <a class="btn btn-warning" id="bt_logdisplayclearLog"><i class="fas fa-times">&nbsp;&nbsp;</i>{{'Vider'}}</a>
                    <a class="btn btn-danger" id="bt_logdisplayremoveLog"><i class="far fa-trash-alt">&nbsp;&nbsp;</i>{{'Supprimer'}}</a>
                </div>
                <div class="box-tools padding-bottom">
                    <input class="form-control text-right" id="in_eventLogSearch" placeholder="{{'Rechercher...'}}" />
                </div>

                <pre id='pre_eventlog' style='overflow: scroll;'></pre>
                <script>
                    nextdom.log.autoupdate({
                        log : log_display_name,
                        default_search : log_default_search,
                        display : $('#pre_eventlog'),
                        search : $('#in_eventLogSearch'),
                        control : $('#bt_eventLogStopStart'),
                    });

                    $("#bt_logdisplayclearLog").on('click', function(event) {
                        nextdom.log.clear({
                            log : log_display_name,
                        });
                    });

                    $("#bt_logdisplayremoveLog").on('click', function(event) {
                        nextdom.log.remove({
                            log : log_display_name,
                        });
                    });
                    $('#bt_logdisplaydownloadLog').click(function() {
                        window.open('core/php/downloadFile.php?pathfile=log/' + log_display_name, "_blank", null);
                    });
                </script>
            </fieldset>
        </form>
    </div>
</div>
<div class="fab fab-bis" style="z-index:999">
    <span class="fab-action-button bg-red"><i class="fab-action-button__icon fas fa-chevron-left" href="index.php?v=d&p=administration"></i></span>
</div>
