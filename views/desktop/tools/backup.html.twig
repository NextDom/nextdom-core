<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left spacing-right"></i>{{ 'common.return' | trans }}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-success btn-action-bar pull-right" id="bt_saveBackup"><i class="fas fa-save spacing-right"></i>{{ 'common.save' | trans }}</a>
            <a class="btn btn-default btn-action-bar pull-right" id="bt_saveOpenLog"><i class="fas fa-file-alt spacing-right"></i>{{ 'common.log' | trans }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div id="backup">
        <div class="box" >
            <!-- Header bar -->
            <div class="box-header with-border ">
                <h3 class="box-title"><i class="fas fa-save spacing-right"></i>{{ 'backup.backups__restorations' | trans }}</h3>
            </div>

            <!-- Page content -->
            <div class="box-body">
                <form class="form-horizontal">
                    <p class="alert alert-info">{{ 'backup.purpose1' | trans }}</br>
                        {{ 'backup.purpose2' | trans }}</p>
                    <p class="alert alert-success">{{ 'backup.purpose3' | trans }}</p>
                    <!-- Sauvegardes Section -->
                    <fieldset>
                        <legend>{{ 'backup.backup_settings' | trans }}</legend>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.location' | trans }}</label>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <input type="text" class="configKey form-control" data-l1key="backup::path"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.saving_on' | trans }}</label>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="input-group">
                                    <input type="text" class="configKey form-control" data-l1key="backup::keepDays"/>
                                    <span class="input-group-addon">{{'jours'}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.total_size' | trans }}</label>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="input-group">
                                    <input type="text" class="configKey form-control" data-l1key="backup::maxSize"/>
                                    <span class="input-group-addon">{{'Mo maximum'}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.manual_backup' | trans }}</label>
                            <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                                <a class="btn btn-action" id="bt_backupNextDom"><i class="fas fa-refresh fa-spin spacing-right" style="display : none;"></i><i class="fas fa-floppy-o spacing-right"></i>{{ 'backup.run' | trans }}</a>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Local Section -->
                    <fieldset class="legend-section">
                        <legend>{{ 'backup.local_backups' | trans }}</legend>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.available_backups' | trans }}</label>
                            <div class="col-sm-6 col-xs-6">
                                <select class="form-control" id="sel_restoreBackup"> </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label" data-toggle="tooltip" title="" data-original-title="{{'vous pouvez restaurer une sauvegarde NextDom ou migrer une sauvegarde Jeedom'}}">{{ 'backup.restoration' | trans }}</label>
                            <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                                <a class="btn btn-warning" id="bt_restoreNextDom"><i class="fas fa-refresh fa-spin spacing-right" style="display : none;"></i><i class="fas fa-window-restore spacing-right"></i>{{ 'backup.restore_selection' | trans }}</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.suppression' | trans }}</label>
                            <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                                <a class="btn btn-danger" id="bt_removeBackup"></i><i class="fas fa-trash-alt spacing-right"></i>{{ 'backup.remove_selected' | trans }}</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.transfer' | trans }}</label>
                            <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                                <span class="btn btn-default btn-file">
                                    <i class="fas fa-refresh fa-spin spacing-right" style="display : none;"></i><i class="fas fa-cloud-upload-alt spacing-right"></i>{{ 'backup.send_backup' | trans }}<input id="bt_uploadBackup" type="file" name="file" data-url="core/ajax/nextdom.ajax.php?action=backupupload&nextdom_token={{ backupAjaxToken }}">
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.downloading' | trans }}</label>
                            <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                                <i class="fas fa-refresh fa-spin spacing-right" style="display : none;"></i><a class="btn btn-success" id="bt_downloadBackup"><i class="fas fa-cloud-download-alt spacing-right"></i>{{ 'backup.download_selection' | trans }}</a>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Cloud Section -->
                    {% for repo, repoData in backupReposList %}
                        {% if repoData['scope']['backup'] != false %}
                            {% set cssClass = 'repo_' ~ repo %}
                            <fieldset class="legend-section repo">
                                <legend>{{ 'backup.backups' | trans }} {{ repoData['name'] }}</legend>
                                {% if repoData['enable'] != 0 %}
                                    <div class="form-group">
                                        <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.automatic_sending' | trans }}</label>
                                        <div class="col-sm-4 col-xs-6">
                                            <input type="checkbox" class="configKey" data-l1key="{{ repo }}::cloudUpload" id="{{ repo }}"/>
                                            <label for="{{ repo }}" class="control-label label-check">{{ 'common.activate' | trans }}</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.available_backups' | trans }}</label>
                                        <div class="col-sm-6 col-xs-6">
                                            <select class="form-control" id="sel_restoreRepoNextDom" data-repo="{{ repo }}">
                                                <option>{{ 'backup.loading' | trans }}</option>
                                            </select>
                                            <script>
                                                REPO_LIST.push('{{ repo }}');
                                            </script>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'backup.restoration' | trans }}</label>
                                        <div class="col-lg-10 col-md-9 col-sm-9 col-xs-12">
                                            <a class="btn btn-warning" id="bt_restoreRepoNextDom" data-repo="{{ repo }}"><i class="fas fa-refresh fa-spin spacing-right" style="display: none;"></i><i class="fas fa-window-restore spacing-right"></i>{{ 'backup.restore_selection' | trans }}</a>
                                        </div>
                                    </div>
                                {% else %}
                                    <p class="alert alert-warning">{{ 'backup.the_service_is_disabled_you_can__activate' | trans }}<a href="/index.php?v=d&p=update_admin">{{'common.here'|trans }}</a></p>
                                {% endif %}
                            </fieldset>
                        {% endif %}
                    {% endfor %}
                </form>
            </div>
        </div>

        <div id="md_backupInfo">
            <div class="content">
                <pre id="pre_backupInfo" style="overflow: scroll;"></pre>
            </div>
        </div>
    </div>
</section>
