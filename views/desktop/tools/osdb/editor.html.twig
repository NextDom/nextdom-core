<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=osdb"><i class="fas fa-chevron-left"></i>{{ 'Retour'}}</a>
        </div>
        <div class="action-group">
        <a class="btn btn-success btn-action-bar pull-right" id="bt_saveFile"><i class="fas fa-check"></i>{{ 'Sauvegarder' }}</a>
        <a class="btn btn-danger btn-action-bar pull-right" id="bt_deleteFile"><i class="fas fa-trash"></i>{{ 'Supprimer' }}</a>
        <a class="btn btn-default btn-action-bar pull-right" id="bt_createFile"><i class="fas fa-file"></i>{{ 'Nouveau' }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box" id="div_rowSystemCommand">
        <!-- Header bar -->
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-pen-square"></i>{{ 'Editeur de fichiers' }}</h3>
        </div>

        <!-- Page content -->
        <div class="box-body">
            <div class="row row-overflow">
                <div class="col-sm-6 col-md-2">
                    <legend><i class="fas fa-folder"></i>{{ 'Dossiers' }}</legend>
                    <div id="div_treeFolder">
                        <ul id="ul_Folder">
                            {% for folder in editorFolders %}
                                <li data-jstree="{\"opened\":true}"><a data-path="{{ editorRootPath }}/{{ folder }}">{{ folder }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6 col-md-2">
                    <legend><i class="fas fa-file"></i>{{ 'Fichiers' }}</legend>
                    <div id="div_fileList" style="list-style-type: none;"></div>
                </div>
                <div class="col-sm-12 col-md-8">
                    <legend><i class="fas fa-edit"></i>{{ 'Edition' }}</legend>
                    <textarea class="form-control" id="ta_fileContent"></textarea>
                </div>
            </div>
        </div>
    </div>
</section>
