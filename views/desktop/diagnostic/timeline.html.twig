<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left">&nbsp;&nbsp;</i>{{ 'Retour'}}</a>
            <a class="btn btn-default btn-action-bar" href="index.php?v=d&p=history"><i class="fas fa-chart-area">&nbsp;&nbsp;</i>{{ 'Historiques'}}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-default btn-action-bar pull-right" id="bt_configureTimelineCommand"><i class="fas fa-cogs">&nbsp;&nbsp;</i>{{ 'Configuration des Commandes' }}</a>
            <a class="btn btn-default btn-action-bar pull-right" id="bt_configureTimelineScenario"><i class="fas fa-cogs">&nbsp;&nbsp;</i>{{ 'Configuration des Scénarios' }}</a>
            <a class="btn btn-warning btn-action-bar pull-right" id="bt_refreshTimeline"><i class="fas fa-refresh">&nbsp;&nbsp;</i>{{ 'Rafraîchir' }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-history">&nbsp;&nbsp;</i>{{ 'Timeline' }}</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="btn-group" id="dateFilters" role="group" aria-label="...">
                    <a class="btn btn-default bt_timelineZoom" data-zoom="h">H</a>
                    <a class="btn btn-default bt_timelineZoom" data-zoom="d">J</a>
                    <a class="btn btn-default bt_timelineZoom" data-zoom="w">S</a>
                    <a class="btn btn-default bt_timelineZoom" data-zoom="m">M</a>
                    <a class="btn btn-default bt_timelineZoom" data-zoom="y">A</a>
                    <a class="btn btn-default bt_timelineZoom" data-zoom="all">{{ 'Tous' }}</a>
                </div>
                <select class="form-control pull-right" id="sel_pluginsTimeline" style="width: 140px;">
                    <option value="all">{{ 'Tous (Plugins)' }}</option>
                    {% for plugin in historyPluginsList %}
                        <option value="{{ plugin.getId() }}">{{ plugin.getName() }}</option>
                    {% endfor %}
                </select>
                <select class="form-control pull-right" id="sel_categoryTimeline" style="width: 170px;">
                    <option value="all">{{ 'Tous (Catégories)' }}</option>
                    {% for categoryCode, categoryData in historyEqLogicCategories %}
                        <option value="{{ categoryCode }}">{{ categoryData['name'] }}</option>
                    {% endfor %}
                </select>
                <select class="form-control pull-right" id="sel_objectsTimeline" style="width: 140px;">
                    <option value="all">{{ 'Tous (Objets)' }}</option>
                    {% for object in historyObjectsList %}
                        <option value="{{ object.getId() }}">{{ object.getName() }}</option>
                    {% endfor %}
                </select>
                <select class="form-control pull-right" id="sel_typesTimeline" style="width: 140px;">
                    <option value="all">{{ 'Tous (Types)' }}</option>
                    <option value="cmd">{{ 'Commandes' }}</option>
                    <option value="scenario">{{ 'Scénarios' }}</option>
                </select>
            </div>
            <div class="form-group">
                <div id="div_visualization"></div>
            </div>
        </div>
    </div>
</section>
