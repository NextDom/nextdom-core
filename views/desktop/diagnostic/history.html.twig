<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left"></i>{{ 'common.return' | trans }}</a>
            <a class="btn btn-default btn-action-bar" href="index.php?v=d&p=timeline"><i class="fas fa-history"></i>{{ 'Timeline'  | trans }}</a>
        </div>
        <div class="action-group">
            <a id="bt_openCmdHistoryConfigure" class="btn btn-default btn-action-bar pull-right"><i class="fas fa-cogs spacing-right"></i>{{ 'Configuration des commandes'  | trans }}</a>
            <a class="btn btn-warning btn-action-bar pull-right" id="bt_clearGraph"><i class="fas fa-trash"></i>{{ 'RAZ du Graphique'  | trans }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box" id="div_History">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-chart-area"></i>{{ 'Historiques'  | trans }}</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <div class="bs-sidebar form-group">
                        <ul id="ul_history" class="nav nav-list bs-sidenav">
                            <fieldset>
                                <div class="filter input-group form-group">
                                    <div class="input-group-addon"><i class="fas fa-search"></i></div>
                                    <input class="filter form-control" placeholder="{{'Rechercher...' | trans }}" />
                                </div>
                                {% set objectId = -1 %}
                                {% for cmd in historyCmdsList %}
                                {% set eqLogic = cmd.getEqLogic() %}
                                {% if eqLogic.hasRight('r') %}
                                {% if objectId != eqLogic.getObject_id %}
                                {% if objectId != -1 %}
                    </div>
                    {% endif %}
                    {% set object = eqLogic.getObject() %}
                    {# Pour remplacer is_object #}
                    {% if object != null and object is not iterable %}
                        {% if object.getDisplay('tagColor') != '' %}
                            <span class="label cursor displayObject label-cmd" data-object_id="o{{ eqLogic.getObject_id() }}" style="background-color: {{ object.getDisplay('tagColor') }};color: {{ object.getDisplay('tagTextColor', 'white') }}">{{ object.getName() }}...</span>
                        {% else %}
                            <span class="label cursor displayObject label-cmd" data-object_id="o{{ eqLogic.getObject_id() }}">{{ object.getName() }}...</span>
                        {% endif %}
                    {% else %}
                        <span class="label cursor displayObject label-cmd" data-object_id="o{{ eqLogic.getObject_id() }}">{{ 'Aucun' }}...</span>
                    {% endif %}
                    <div class="cmdList" data-object_id="o{{ eqLogic.getObject_id() }}" style="display:none;">
                        {% endif %}
                        <li class="cursor li_history" data-cmd_id="{{ cmd.getId() }}">
                            <a class="history"><i class="fa fa-circle-o text-gray spacing-right"></i>
                                {{ cmd.getEqLogic().getName() }} - {{ cmd.getName() }}
                                <i class="fas fa-trash fa-sm remove spacing-left"></i>
                                {% if cmd.getSubType() == 'string' %}
                                    <i class="fas fa-share export spacing-left"></i>
                                {% endif %}
                            </a>
                        </li>
                        {% set objectId = eqLogic.getObject_id() %}
                        {% endif %}
                        {% endfor %}
                        </ul>
                        </fieldset>
                    </div>
                </div>

                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                    <fieldset>
                        <div class="form-group">
                            <input id="in_startDate" class="form-control in_datepicker" style="display : inline-block; width: 150px;" value="{{ historyDate['start'] }}"/>
                            <input id="in_endDate" class="form-control in_datepicker" style="display : inline-block; width: 150px;" value="{{ historyDate['end'] }}"/>
                            <a class="btn btn-success" id='bt_validChangeDate' data-toggle="tooltip" title="" data-original-title="{{ 'Attention : une trop grande plage de dates peut mettre très longtemps à être calculée ou même ne pas s\'afficher.' }}"><i class="fas fa-check"></i>{{ 'Ok' }}</a>
                            <select class="form-control pull-right" id="sel_chartType" style="width: 200px;">
                                <option value="line">{{ 'Ligne' }}</option>
                                <option value="bar">{{ 'Barre' }}</option>
                                <option value="bubble">{{ 'bubble' }}</option>
                            </select>

                        </div>
                        <div class="box box-primary">
                            <div class="box-header with-border">                                        <div class="form-group spacing-bottom">

                                </div>
                                <h3 class="box-title">Area Chart</h3>
                                <div class="box-tools pull-right">
                                    <label class="checkbox-inline chart-options">
                                        <input type="checkbox" id='bt_areaToggle' class="graphDataOption spacing-left btn-on" data-l1key="configuration" data-l2key="graphArea">{{ 'Area' }}
                                    </label>
                                    <label class="checkbox-inline chart-options">
                                        <input type="checkbox" id='bt_smoothToggle' class="graphDataOption spacing-left btn-on" data-l1key="configuration" data-l2key="graphSmooth">{{ 'smooth' }}
                                    </label>
                                    <label class="checkbox-inline chart-options">
                                        <input type="checkbox" id='bt_steppedToggle' class="graphDataOption spacing-left btn-on" data-l1key="configuration" data-l2key="graphStep">{{ 'Escalier' }}
                                    </label>
                                    <a class="btn btn-sm btn-default" id='bt_resetZoom'><i class="fas fa-search"></i>{{ 'reset zoom' }}</a>
                                    <a class="btn btn-sm btn-default" id='bt_fullscreen'><i class="fas fa-arrows-alt"></i>{{ 'fullscreen' }}</a>

                                </div>
                            </div>
                            <div class="box-body">
                                <canvas id="div_graph"></canvas>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</section>