<div class="box" id="API">
    <!-- Header bar -->
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fas fa-key">&nbsp;&nbsp;</i>{{ 'API' }}</h3>
        <div class="box-tools pull-right">
            <a class="pull-right btn-box-tool" href="index.php?v=d&p=administration"><i class="fa fa-times"></i></a>
        </div>
    </div>

    <!-- Page content -->
    <div class="box-body">
        <form class="form-horizontal">
            <fieldset>

                <!-- Access Section -->
                <legend class="legend-title">{{ 'Accès API' }}</legend>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'Accès API HTTP' }}</label>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                        <select class="form-control configKey" data-l1key="api::core::http::mode">
                            <option value="enable">{{ 'Activé' }}</option>
                            <option value="whiteip">{{ 'IP blanche' }}</option>
                            <option value="localhost">{{ 'Localhost' }}</option>
                            <option value="disable">{{ 'Désactivé' }}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'Accès API JSONRPC' }}</label>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                        <select class="form-control configKey" data-l1key="api::core::jsonrpc::mode">
                            <option value="enable">{{ 'Activé' }}</option>
                            <option value="whiteip">{{ 'IP blanche' }}</option>
                            <option value="localhost">{{ 'Localhost' }}</option>
                            <option value="disable">{{ 'Désactivé' }}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'Accès API TTS' }}</label>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                        <select class="form-control configKey" data-l1key="api::core::tts::mode">
                            <option value="enable">{{ 'Activé' }}</option>
                            <option value="whiteip">{{ 'IP blanche' }}</option>
                            <option value="localhost">{{ 'Localhost' }}</option>
                            <option value="disable">{{ 'Désactivé' }}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'Accès API Pro' }}</label>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                        <select class="form-control configKey" data-l1key="api::core::pro::mode">
                            <option value="enable">{{ 'Activé' }}</option>
                            <option value="disable">{{ 'Désactivé' }}</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label">{{ 'Accès API Market' }}</label>
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                        <select class="form-control configKey" data-l1key="api::core::market::mode">
                            <option value="enable">{{ 'Activé' }}</option>
                            <option value="disable">{{ 'Désactivé' }}</option>
                        </select>
                    </div>
                </div>

                <!-- Key Section -->
                <legend class="legend-title legend-section">{{ 'Clefs API' }}</legend>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label" data-toggle="tooltip" title="" data-original-title="{{ 'Clef API globale de' }} {{ adminConfigs['product_name'] }}">{{ 'Clef API Globale' }}</label>
                    <div class="btn-group col-lg-10 col-md-9 col-sm-9 col-xs-12">
                        <a class="btn btn-default btn-action bt_regenerate_api" data-plugin="core"><i class="fa fa-refresh">&nbsp;&nbsp;</i>{{'Rafraîchir'}}</a>
                        <span class="span_apikey label label-info label-value">{{ adminConfigs['api'] }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label" data-toggle="tooltip" title="" data-original-title="{{ 'Clef API Pro de' }} {{ adminConfigs['product_name'] }}">{{ 'Clef API Pro' }}</label>
                    <div class="btn-group col-lg-10 col-md-9 col-sm-9 col-xs-12">
                        <a class="btn btn-default btn-action bt_regenerate_api" data-plugin="pro"><i class="fa fa-refresh">&nbsp;&nbsp;</i>{{'Rafraîchir'}}</a>
                        <span class="span_apikey label label-info label-value">{{ adminConfigs['apipro'] }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label" data-toggle="tooltip" title="" data-original-title="{{ 'Clef Market de' }} {{ adminConfigs['product_name'] }}">{{ 'Clef Market' }}</label>
                    <div class="btn-group col-lg-10 col-md-9 col-sm-9 col-xs-12">
                        <a class="btn btn-default btn-action bt_regenerate_api" data-plugin="apimarket"><i class="fa fa-refresh">&nbsp;&nbsp;</i>{{'Rafraîchir'}}</a>
                        <span class="span_apikey label label-info label-value">{{ adminConfigs['apimarket'] }}</span>
                    </div>
                </div>

                <!-- Plugins Section -->
                <legend class="legend-title legend-section">{{ 'API Plugins' }}</legend>
                {% if not adminIsRescueMode and adminPluginsList|length > 0 %}
                    {% for pluginData in adminPluginsList %}
                        <div class="form-group">
                            <label class="col-lg-2 col-md-3 col-sm-3 col-xs-12 control-label" data-original-title="{{ 'API pour le plugin' }} {{ pluginData.plugin.getName() }}">{{ pluginData.plugin.getName() }}</label>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                                <select class="form-control configKey" data-l1key="api::{{ pluginData.plugin.getId() }}::mode">
                                    <option value="enable">{{ 'Activé' }}</option>
                                    <option value="whiteip">{{ 'IP blanche' }}</option>
                                    <option value="localhost">{{ 'Localhost' }}</option>
                                    <option value="disable">{{ 'Désactivé' }}</option>
                                </select>
                            </div>
                            <div class="btn-group col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                <a class="btn btn-default btn-action bt_regenerate_api" data-plugin="{{ pluginData.plugin.getId() }}"><i class="fa fa-refresh">&nbsp;&nbsp;</i>{{'Rafraîchir'}}</a>
                                <span class="span_apikey label label-info label-value">{{ pluginData.api }}</span>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </fieldset>
        </form>
    </div>

    <!-- Footer bar -->
    <div class="box-footer clearfix">
        <a class="btn btn-success pull-right" id="bt_saveapi"><i class="fas fa-save">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
        <a class="btn btn-danger pull-right" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left">&nbsp;&nbsp;</i>{{ 'Retour' }}</a>
    </div>
</div>
