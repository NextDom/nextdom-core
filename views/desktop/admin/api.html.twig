<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left"></i>{{ 'common.return' | trans }}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-success btn-action-bar pull-right" id="bt_saveapi"><i class="fas fa-save"></i>{{ 'common.save' | trans }}</a>
            <a class="btn btn-danger btn-action-bar pull-right bt_cancelModifs"><i class="fas fa-times"></i>{{ 'common.cancel'|trans }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box" id="API">
        <!-- Header bar -->
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-key"></i>{{ 'API' }}</h3>
        </div>

        <!-- Page content -->
        <div class="box-body">
            <!-- Access Section -->
            <fieldset>
                <legend>{{ 'Accès API' }}</legend>
                <div class="row">
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Accès API HTTP' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="api::core::http::mode" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <select class="form-control configKey" data-l1key="api::core::http::mode">
                                <option value="enable">{{ 'common.enabled' | trans }}</option>
                                <option value="whiteip">{{ 'IP blanche' }}</option>
                                <option value="localhost">{{ 'Localhost' }}</option>
                                <option value="disable">{{ 'common.disabled' | trans }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Accès API JSONRPC' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="api::core::jsonrpc::mode" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <select class="form-control configKey" data-l1key="api::core::jsonrpc::mode">
                                <option value="enable">{{ 'common.enabled' | trans }}</option>
                                <option value="whiteip">{{ 'IP blanche' }}</option>
                                <option value="localhost">{{ 'Localhost' }}</option>
                                <option value="disable">{{ 'common.disabled' | trans }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Accès API TTS' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="api::core::tts::mode" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <select class="form-control configKey" data-l1key="api::core::tts::mode">
                                <option value="enable">{{ 'common.enabled' | trans }}</option>
                                <option value="whiteip">{{ 'IP blanche' }}</option>
                                <option value="localhost">{{ 'Localhost' }}</option>
                                <option value="disable">{{ 'common.disabled' | trans }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Accès API Pro' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="api::core::pro::mode" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <select class="form-control configKey" data-l1key="api::core::pro::mode">
                                <option value="enable">{{ 'common.enabled' | trans }}</option>
                                <option value="disable">{{ 'common.disabled' | trans }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Accès API Market' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="api::core::market::mode" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <select class="form-control configKey" data-l1key="api::core::market::mode">
                                <option value="enable">{{ 'common.enabled' | trans }}</option>
                                <option value="disable">{{ 'common.disabled' | trans }}</option>
                            </select>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Key Section -->
            <fieldset class="legend-section">
                <legend>{{ 'Clefs API' }}</legend>
                <div class="row">
                    <div class="form-group col-lg-6 col-xs-12 col-padding">
                        <label class="control-label" data-toggle="tooltip" title="" data-original-title="{{ 'Clef API globale de' }} {{ PRODUCT_NAME }}">{{ 'Clef API Globale' }}</label>
                        <div class="mix-group">
                            <a class="btn btn-action bt_regenerate_api" data-plugin="core"><i class="fas fa-refresh"></i><span>{{'Régénérer'}}</span></a>
                            <span class="span_apikey label label-value">{{ adminConfigs['api'] }}</span>
                            <a class="btn btn-default bt_copy_api" data-plugin="core"><i class="fas fa-copy no-spacing"></i><span></span></a>
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-xs-12 col-padding">
                        <label class="control-label" data-toggle="tooltip" title="" data-original-title="{{ 'Clef API Pro de' }} {{ PRODUCT_NAME }}">{{ 'Clef API Pro' }}</label>
                        <div class="mix-group">
                            <a class="btn btn-action bt_regenerate_api" data-plugin="pro"><i class="fas fa-refresh"></i><span>{{'Régénérer'}}</span></a>
                            <span class="span_apikey label label-value">{{ adminConfigs['apipro'] }}</span>
                            <a class="btn btn-default bt_copy_api" data-plugin="pro"><i class="fas fa-copy no-spacing"></i><span></span></a>
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-xs-12 col-padding">
                        <label class="control-label" data-toggle="tooltip" title="" data-original-title="{{ 'Clef Market de' }} {{ PRODUCT_NAME }}">{{ 'Clef Market' }}</label>
                        <div class="mix-group">
                            <a class="btn btn-action bt_regenerate_api" data-plugin="apimarket"><i class="fas fa-refresh"></i><span>{{'Régénérer'}}</span></a>
                            <span class="span_apikey label label-value">{{ adminConfigs['apimarket'] }}</span>
                            <a class="btn btn-default bt_copy_api" data-plugin="apimarket"><i class="fas fa-copy no-spacing"></i><span></span></a>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Plugins Section -->
            <fieldset class="legend-section">
                <legend>{{ 'Accès et Clefs API Plugins' }}</legend>
                {% if adminPluginsList|length > 0 %}
                    <div class="row">
                        {% for pluginData in adminPluginsList %}
                            <div class="form-group col-lg-6 col-xs-12 col-padding">
                                <label class="control-label" data-original-title="{{ 'API pour le plugin' }} {{ pluginData.plugin.getName() }}">{{ pluginData.plugin.getName() }}</label>
                                <select class="form-control form-group configKey" data-l1key="api::{{ pluginData.plugin.getId() }}::mode">
                                    <option value="enable">{{ 'common.enabled' | trans }}</option>
                                    <option value="whiteip">{{ 'IP blanche' }}</option>
                                    <option value="localhost">{{ 'Localhost' }}</option>
                                    <option value="disable">{{ 'common.disabled' | trans }}</option>
                                </select>
                                <div class="mix-group">
                                    <a class="btn btn-action bt_regenerate_api" data-plugin="{{ pluginData.plugin.getId() }}"><i class="fas fa-refresh"></i><span>{{'Régénérer'}}</span></a>
                                    <span class="span_apikey label label-value">{{ pluginData.api }}</span>
                                    <a class="btn btn-default bt_copy_api" data-plugin="{{ pluginData.plugin.getId() }}"><i class="fas fa-copy no-spacing"></i><span></span></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-info">{{ 'Aucun plugin ne disposant de clefs API...' }}.</div>
                {% endif %}
            </fieldset>
        </div>
    </div>
</section>
