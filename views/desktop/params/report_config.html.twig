<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left"></i>{{ 'common.return' | trans }}</a>
            <a class="btn btn-default btn-action-bar" href="index.php?v=d&p=report"><i class="fas fa-eye"></i>{{ 'common.display' | trans }}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-success btn-action-bar pull-right" id="bt_savereport_config"><i class="fas fa-save"></i>{{ 'common.save' | trans }}</a>
            <a class="btn btn-danger btn-action-bar pull-right bt_cancelModifs"><i class="fas fa-times"></i>{{ 'common.cancel'|trans }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="box" id="report_config">
        <!-- Header bar -->
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-newspaper-o"></i>{{ 'Rapports' | trans }}</h3>
        </div>

        <!-- Page content -->
        <div class="box-body">
            <!-- Params Section -->
            <fieldset>
                <legend>{{ 'common.settings' | trans }}</legend>
                <div class="row">
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Délai d\'attente après génération de la page' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="report::delay" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <span class="input-group-addon input-range-min"></span>
                            <input class="configKey slider" type="range" min="100" max="10000" step="100" data-l1key="report::delay"/>
                            <span class="input-group-addon input-range-max"></span>
                            <span class="input-group-addon input-range-value"></span>
                            <span class="input-group-addon">{{'millisecondes'}}</span>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Nettoyer les rapports plus anciens de' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="report::maxdays" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <span class="input-group-addon input-range-min"></span>
                            <input class="configKey slider" type="range" min="0" max="180" step="1" data-l1key="report::maxdays"/>
                            <span class="input-group-addon input-range-max"></span>
                            <span class="input-group-addon input-range-value"></span>
                            <span class="input-group-addon">{{'jours'}}</span>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</section>
