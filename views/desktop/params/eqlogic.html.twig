<section class="content">
    <div class="box" id="eqlogic">
        <!-- Header bar -->
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fas fa-plug"></i>{{ 'common.devices' | trans }}</h3>
        </div>

        <!-- Page content -->
        <div class="box-body">
            <fieldset>
                <!-- Params Section -->
                <legend>{{ 'common.settings' | trans }}</legend>
                <div class="row">
                    <div class="form-group col-sm-6 col-xs-12 col-padding">
                        <label class="control-label">{{ 'Nombre d\'échecs' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="numberOfTryBeforeEqLogicDisable" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <span class="input-group-addon input-range-min"></span>
                            <input class="configKey slider" type="range" min="1" max="30" step="1" data-l1key="numberOfTryBeforeEqLogicDisable"/>
                            <span class="input-group-addon input-range-max"></span>
                            <span class="input-group-addon input-range-value"></span>
                            <span class="input-group-addon">{{'avant désactivation'}}</span>
                        </div>
                    </div>
                </div>

                <!-- Seuil Section -->
                <legend>{{ 'Seuils des piles' }}</legend>
                <div class="row">
                    <div class="form-group col-md-6 col-xs-12 col-padding">
                        <label class="control-label spacing-right">{{ 'Seuil critique ' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="battery::danger" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <span class="input-group-addon label-danger">{{ 'common.danger' | trans }}</span>
                            <span class="input-group-addon input-range-min"></span>
                            <input class="configKey slider" type="range" min="0" max="100" step="1" data-l1key="battery::danger"/>
                            <span class="input-group-addon input-range-max"></span>
                            <span class="input-group-addon input-range-value"></span>
                            <span class="input-group-addon">{{'%'}}</span>
                            <span class="input-group-addon label-warning">{{ 'common.warning' | trans }}</span>
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-xs-12 col-padding">
                        <label class="control-label spacing-right">{{ 'Seuil d\'alerte' }}</label>
                        <div class="input-group">
                            <a class="input-group-addon cursor bt_resetConfigParam" data-l1key="battery::warning" data-toggle="tooltip" title="" data-original-title="Par défaut"><i class="fas fa-times"></i></a>
                            <span class="input-group-addon label-warning">{{ 'common.warning' | trans }}</span>
                            <span class="input-group-addon input-range-min"></span>
                            <input class="configKey slider" type="range" min="0" max="100" step="1" data-l1key="battery::warning"/>
                            <span class="input-group-addon input-range-max"></span>
                            <span class="input-group-addon input-range-value"></span>
                            <span class="input-group-addon">{{'%'}}</span>
                            <span class="input-group-addon label-success">{{ 'common.ok' | trans }}</span>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</section>
