<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left"></i>{{ 'common.return' | trans }}</a>
            <a class="btn btn-default btn-action-bar" href="index.php?v=d&p=eqAnalyse"><i class="fas fa-eye"></i>{{ 'common.display' | trans }}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-success btn-action-bar pull-right" id="bt_saveeqlogic"><i class="fas fa-save"></i>{{ 'common.save' | trans }}</a>
