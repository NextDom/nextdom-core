<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <a class="btn btn-danger btn-action-bar" href="index.php?v=d&p=administration"><i class="fas fa-chevron-left">&nbsp;&nbsp;</i>{{ 'Retour'}}</a>
        </div>
        <div class="action-group">
            <a class="btn btn-success btn-action-bar pull-right" id="bt_savecustom"><i class="fas fa-save">&nbsp;&nbsp;</i>{{ 'Sauvegarder' }}</a>
        </div>
    </div>
</section>

<section class="content">
    <div class="nav-tabs-custom config" id="custom">
        <!-- Tabs title -->
        <ul class="nav nav-tabs pull-right" role="tablist">
            <li role="presentation"><a href="#advanced" aria-controls="profile" role="tab" data-toggle="tab"><i class="fas fa-flask">&nbsp;&nbsp;</i>{{ 'Modifications Avancées' }}</a></li>
            <li role="presentation"><a href="#colortab" aria-controls="profile" role="tab" data-toggle="tab"><i class="fas fa-th-large">&nbsp;&nbsp;</i>{{ 'Options Tuiles' }}</a></li>
            <li role="presentation" class="active"><a href="#themestab" aria-controls="home" role="tab" data-toggle="tab"><i class="fas fa-tint">&nbsp;&nbsp;</i>{{ 'Thème' }}</a></li>
            <li class="header pull-left"><i class="fas fa-pencil-square">&nbsp;&nbsp;</i>{{ 'Customisation' }}</li>
        </ul>

        <!-- Tabs content -->
        <div class="global-tab-content tab-content">
            <!-- Theme tab -->
            <div role="tabpanel" class="tab-pane active" id="themestab">
                <p class="alert alert-info">{{ 'Pensez à sauvegarder puis actualiser la page pour voir les changements...' }}</p>
                <fieldset>
                    <legend>{{ 'Couleurs dominantes du thème' }}</legend>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Couleur d\'accentuation principale' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color1" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color1" value="{{ Theme['color1'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Couleur textes et icônes' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color2" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class="colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color2" value="{{ Theme['color2'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Couleur de fond' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color9" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class="colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color9" value="{{ Theme['color9'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="legend-section">
                    <legend>{{ 'Personnalisation du thème' }}</legend>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Couleur menu lateral' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color6" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color6" value="{{ Theme['color6'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Couleur sous-menu latéral' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color8" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color8" value="{{ Theme['color8'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Couleur hover principal' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color3" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color3" value="{{ Theme['color3'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Couleur hover menu latéral' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color7" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color7" value="{{ Theme['color7'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Couleur checkbox & radio' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color4" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color4" value="{{ Theme['color4'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Couleur croix fenêtres modales' }}</label>
                            <div class="btn-group">
                                <a class="btn btn-action bt_resetColor" data-l1key="theme:color5" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                <div class=" colorpicker-component colorpick input-group">
                                    <input type="text" class="configKey form-control noSet" data-l1key="theme:color5" value="{{ Theme['color5'] }}"/>
                                    <span class="input-group-addon"><i></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <fieldset class="legend-section">
                    <legend>{{ 'Personnalisation des notifications' }}</legend>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Position des notifications' }}</label>
                            <select class="configKey form-control" data-l1key="notify::position">
                                <option value="topRight" selected="selected">Haut droite</option>
                                <option value="topLeft">Haut gauche</option>
                                <option value="bottomRight">Bas droite</option>
                                <option value="bottomLeft">Bas gauche</option>
                                <option value="topCenter">Haut centre</option>
                                <option value="bottomCenter">Bas centre</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Durée des notifications' }}</label>
                            <input type="text" class="configKey form-control" data-l1key="notify::timeout"/>
                        </div>
                    </div>
                </fieldset>
            </div>

            <!-- Tuiles tab -->
            <div role="tabpanel" class="tab-pane" id="colortab">
                <fieldset>
                    <legend>{{ 'Paramètrage de l\'aspect des tuiles du dashboard en version desktop ou mobile' }}</legend>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Opacité par défaut des widgets' }}</label>
                            <input type="numeric" class="configKey form-control" data-l1key="widget::background-opacity"/>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Pas horizontal' }}</label>
                            <input type="numeric" class="configKey form-control" data-l1key="widget::step::width"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Pas vertical' }}</label>
                            <input type="numeric" class="configKey form-control" data-l1key="widget::step::height"/>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Marge externe' }}</label>
                            <input type="numeric" class="configKey form-control" data-l1key="widget::margin"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                            <label class="control-label">{{ 'Marge interne' }}</label>
                            <input type="numeric" class="configKey form-control" data-l1key="widget::padding"/>
                        </div>
                        <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                            <label class="control-label">{{ 'Taille Coins' }}</label>
                            <input type="numeric" class="configKey form-control" data-l1key="widget::radius"/>
                        </div>
                    </div>
                </fieldset>

                <div id="colortab-list">
                    {% for category, categoryData in adminCategories %}
                        <fieldset class="legend-section">
                            <legend>{{ 'Catégorie' }} {{ categoryData['name'] }}</legend>
                            <div class="row">
                                <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                                    <label class="control-label">{{ 'Dashboard couleur de fond' }}</label>
                                    <div class="btn-group">
                                        <a class="btn btn-action bt_resetColor" data-l1key="eqLogic:category:{{ category }}:color" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                        <div class=" colorpicker-component colorpick input-group">
                                            <input type="text" class="configKey form-control noSet" data-l1key="eqLogic:category:{{ category }}:color" value="{{ categoryData['color'] }}"/>
                                            <span class="input-group-addon"><i></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                                    <label class="control-label">{{ 'Mobile couleur de fond' }}</label>
                                    <div class="btn-group ">
                                        <a class="btn btn-action bt_resetColor" data-l1key="eqLogic:category:{{ category }}:mcolor" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                        <div class=" colorpicker-component colorpick input-group">
                                            <input type="text" class="configKey form-control cursor noSet" data-l1key="eqLogic:category:{{ category }}:mcolor" value="{{ categoryData['mcolor'] }}"/>
                                            <span class="input-group-addon"><i></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4 col-md-offset-1 col-xs-12">
                                    <label class="control-label">{{ 'Dashboard couleur commande' }}</label>
                                    <div class="btn-group">
                                        <a class="btn btn-action bt_resetColor" data-l1key="eqLogic:category:{{ category }}:cmdColor" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                        <div class=" colorpicker-component colorpick input-group">
                                            <input type="text" class="configKey form-control cursor noSet" data-l1key="eqLogic:category:{{ category }}:cmdColor" value="{{ categoryData['cmdColor'] }}"/>
                                            <span class="input-group-addon"><i></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-4 col-md-offset-2 col-xs-12">
                                    <label class="control-label">{{ 'Mobile couleur commande' }}</label>
                                    <div class="btn-group">
                                        <a class="btn btn-action bt_resetColor" data-l1key="eqLogic:category:{{ category }}:mcmdColor" data-toggle="tooltip" title="" data-original-title="{{ 'Remettre par défaut' }}"><i class="fas fa-times"></i></a>
                                        <div class=" colorpicker-component colorpick input-group">
                                            <input type="text" class="configKey form-control cursor noSet" data-l1key="eqLogic:category:{{ category }}:mcmdColor" value="{{ categoryData['mcmdColor'] }}"/>
                                            <span class="input-group-addon"><i></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    {% endfor %}
                </div>
            </div>

            <!-- Advanced tab -->
            <div role="tabpanel" class="tab-pane nav-tabs-custom" id="advanced">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="active"><a href="#desktop" aria-controls="home" role="tab" data-toggle="tab">{{ 'Desktop' }}</a></li>
                    <li><a href="#mobile" aria-controls="profile" role="tab" data-toggle="tab">{{ 'Mobile' }}</a></li>
                </ul>
                <div class="tab-content">
                    <div class="btn-group alert alert-warning" id="div_spanAlertMessage">
                        {{ 'Attention : tout ce que vous écrivez ici est global et inclus sur toutes les pages. La moindre erreur peut rendre votre' }} {{ customProductName }} {{ 'non fonctionel.' }}
                        <div>
                            <input type="checkbox" id="enableCustomCss" class="configKey" data-l1key="enableCustomCss"{% if customEnableCustomCss %} checked="checked"{% endif %}>
                            <label for="enableCustomCss" class="control-label label-check" data-toggle="tooltip" title=""
                                   data-original-title="{{ 'Force la prise en compte de ces personnalisation CSS et JS en dernier lieu' }}">{{ 'Activer la personnalisation avancée' }}
                            </label>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane active" id="desktop">
                        <div class="row">
                            <fieldset class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <legend>{{ 'Javascript' }}</legend>
                                <textarea id="ta_jsDesktopContent">{{ customJS }}</textarea>
                            </fieldset>
                            <fieldset class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <legend>{{ 'CSS' }}</legend>
                                <textarea id="ta_cssDesktopContent">{{ customCSS }}</textarea>
                            </fieldset>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="mobile">
                        <div class="row">
                            <fieldset class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <legend>{{ 'Javascript' }}</legend>
                                <textarea id="ta_jsMobileContent">{{ customMobileJS }}</textarea>
                            </fieldset>
                            <fieldset class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <legend>{{ 'CSS' }}</legend>
                                <textarea id="ta_cssMobileContent">{{ customMobileCSS }}</textarea>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
