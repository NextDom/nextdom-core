<header class="main-header">
    <!-- Logo -->
    <a href="{{ HOMELINK }}" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><img class="logo-mini-img" src="/public/img/NextDom/NextDom_Square_AlphaBlackWhite.png"/></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><img class="logo-lg-img" src="/public/img/NextDom/NextDom_Wide_AlphaBlackWhite.png"/></span>
    </a>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Navbar left menu-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button"></a>

        <a href="#" class="search-toggle" id="search-toggle" role="button"><i class="fas fa-search"></i></a>
        <div class="navbar-form navbar-left navbar-search">
            <div class="input-group">
                <input type="text" class="form-control" id="generalSearch" placeholder="Rechercher...">
                <span class="input-group-addon cursor" id="search-close"><i class="fas fa-times"></i></span>
            </div>
        </div>

        <div class="objectSummaryGlobalHeader">
            {{ MENU_HTML_GLOBAL_SUMMARY|raw }}
        </div>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Notifications: style can be found in dropdown.less -->
                <li class="clock hidden-xs">
                    <a class="clocktime" id="horloge_time">00:00:00</a>
                    <a class="clockdate" id="horloge_date">lundi 1 janvier 1970</a>
                </li>
                <li class="dropdown notifications-menu task_notif_mobile">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                        {% if MENU_NB_MESSAGES != 0 %}
                            <i class="fas fa-envelope-open notifbadge"></i>
                            <span id="span_nbMessage" class="label label-warning notifcounter">{{ MENU_NB_MESSAGES }}</span>
                        {% else %}
                            <i class="fas fa-envelope-open"></i>
                        {% endif %}
                    </a>
                    <ul class="dropdown-menu" id="table_message">
                        <li class="header">Vous avez {{ MENU_NB_MESSAGES }} messages</li>
                        <li>
                            <ul class="menu">
                                {% for message in messagesList %}
                                    <li data-message_id="{{ message.getId() }}">
                                        <a href="#">
                                            <div class="pull-left">
                                                <img src="/public/img/NextDom/NextDom_Square_WhiteBlackBlue.png">
                                            </div>
                                            <h4>{{ message.getPlugin() }}<small class="pull-right"><i class="fas fa-clock spacing-right"></i>{{ message.getDate() }}</small></h4>
                                            <div class="pull-left">
                                                <p>{{ message.getMessage()|raw }}</p>
                                            </div>
                                            <p>
                                                <span>{{ message.getAction() }}</span>
                                                <div class="btn btn-sm btn-danger removeMessage pull-right"><i class="fas fa-trash no-spacing"></i></div>
                                            </p>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                </li>
                {% if IS_ADMIN %}
                    <li class="dropdown tasks-menu task_update_mobile">
                        <a href="index.php?v=d&p=update" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                            {% if MENU_NB_UPDATES != 0 %}
                                <i class="fas fa-download notifbadge"></i>
                                <span id="span_nbUpdate" class="label label-danger notifcounter">{{ MENU_NB_UPDATES }}</span>
                            {% else %}
                                <i class="fas fa-download"></i>
                            {% endif %}
                        </a>
                    </li>
                {% endif %}
                <li class="task_bell_mobile cursor">
                    {% if NOTIFY_STATUS %}
                        <a class="notifyIconLink" onclick="switchNotify(0);"><i class="notifyIcon fas fa-bell"></i></a>
                    {% else %}
                        <a class="notifyIconLink" onclick="switchNotify(1);"><i class="notifyIcon fas fa-bell-slash"></i></a>
                    {% endif %}
                </li>
                <li class="task_fullscreen_mobile cursor">
                    <a onclick="toggleFullScreen();"><i id="togglefullscreen" class="fa fa-expand"></i></a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<script src="/public/js/modals/message.js"></script>
