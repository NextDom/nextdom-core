<form class="form-horizontal">
    <fieldset>
        {% if otherData is defined %}
            {% for otherDataKey, otherDataInformations in otherData %}
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ otherDataKey }}</label>
                    <div class="col-sm-10">
                        {% if otherDataInformations['type'] == 'json' %}
                            <textarea class="form-control" rows="3" disabled="disabled">{{ otherDataInformations['value'] }}</textarea>
                        {% elseif otherDataInformations['type'] == 'long-text' %}
                            <pre disabled="disabled">{{ otherDataInformations['value'] }}</pre>
                        {% else %}
                            <input class="form-control" disabled="disabled" value="{{ otherDataInformations['value'] }}"/>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
            <hr/>
        {% endif %}
        {% for dataKey, dataInformations in data %}
            <div class="form-group">
                <label class="col-sm-2 control-label">{{ dataKey }}</label>
                <div class="col-sm-10">
                    {% if dataInformations['type'] == 'json' %}
                        <textarea class="form-control" rows="3" disabled="disabled">{{ dataInformations['value'] }}</textarea>
                    {% elseif dataInformations['type'] == 'long-text' %}
                        <pre disabled="disabled">{{ dataInformations['value'] }}</pre>
                    {% else %}
                        <input class="form-control" disabled="disabled" value="{{ dataInformations['value'] }}"/>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </fieldset>
</form>
