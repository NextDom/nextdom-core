<div style="display: none;" id="md_cmdConfigureHistory"></div>

<section class="content-header">
    <div class="action-bar">
        <div class="action-group">
            <span class="label label-info label-sticker-big">{{ 'Commande(s) historisée(s) : ' }}{{ dataCount['history'] }}</span>
            <span class="label label-info label-sticker-big">{{ 'Commande(s) timeline : ' }}{{ dataCount['timeline'] }}</span>
        </div>
        <div class="action-group">
            <a class="btn btn-success pull-right" id="bt_cmdConfigureCmdHistoryApply"><i class="fas fa-check"></i>{{ 'Valider' }}</a>
        </div>
    </div>
</section>

<section class="content">
    <table class="table table-bordered table-condensed tablesorter" id="table_cmdConfigureHistory" style="width:100%">
        <thead>
            <tr>
                <th data-filter="false" data-sorter="checkbox">{{ 'Historisé' }}</th>
                <th data-filter="false" data-sorter="checkbox">{{ 'Timeline' }}
                    <a class="btn btn-danger btn-xs pull-right" id="bt_canceltimeline"><i class="fas fa-times"></i></a>
                    <a class="btn btn-success btn-xs pull-right" id="bt_applytimeline"><i class="fas fa-check"></i></a>
                </th>
                <th>{{ 'Type' }}</th>
                <th>{{ 'Nom' }}</th>
                <th>{{ 'Plugin' }}</th>
                <th data-sorter="select-text">{{ 'Mode de lissage' }}</th>
                <th data-sorter="select-text">{{ 'Purge de l\'historique si plus vieux' }}</th>
                <th data-sorter="false" data-filter="false">{{ 'Action' }}</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</section>

<script src="/public/js/modals/cmd.configureHistory.js"></script>
