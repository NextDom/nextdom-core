DocumentRoot  "${wwwdir}"
TraceEnable   Off
ErrorDocument 300 /public/300.html
ErrorDocument 401 /public/401.html
ErrorDocument 404 /public/404.html
ErrorDocument 500 /public/500.html

RewriteEngine On
RewriteRule  ^/?core/img/(.*)$ /public/img/$1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond expr "%{REQUEST_FILENAME} -strmatch '/3rdparty/*'"
RewriteRule ^/(.*)$ /index.php?v=s&file=$1 [B,L]


<Directory "${wwwdir}">
    Options -Indexes +FollowSymLinks
    AllowOverride All
    # Order allow,deny
    # Allow from all
    Require all granted
</Directory>

<Directory "${wwwdir}/assets/data/custom/">
  Order allow,deny
  <Files ~ "\.(obj|mtl|jpeg|png)$">
     Allow from all
  </Files>
  Deny from all
</Directory>

